<!doctype html>
<html lang="en">
<h1>Create a new Event</h1>
<%= @event.errors.full_messages unless @event.errors.full_messages.empty? %>
<form action="/events/create" method="post">
  <input id="event_title" name="event[title]" type="text" value="<%= @event.title %>" placeholder="event title" required/>
  <br>
  <br>
  <input name="event[date]" type="text" id="datepicker" value="<%= @event.date %>" placeholder="event date" required/>
  <br>
  <br>
  <input id="event_organizer_name" name="event[organizer_name]" type="text" value="<%= @event.organizer_name %>" placeholder="event organizer name" required/>
  <br>
  <br>
  <input id="event_organizer_email" name="event[organizer_email]" type="email" value="<%= @event.organizer_email %>" placeholder="event organizer email" required/>
  <br>
  <br>
  <input type="submit" value="Create event" />
  <br>
  <br>
</form> 
<script>
  $(function() {
    $( "#datepicker" ).datepicker();
  });
</script>
</html>
